<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/submitbtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:textAlignment="inherit"
    android:textDirection="inherit"
    tools:context=".ContactUsActivity">

    <TextView
        android:id="@+id/branchesTitle"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/header_img"
        android:text="@string/contact_us"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paragraphTextView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="476dp"
        android:paddingTop="0dp"
        android:text="@string/we_are_here_for_you_and_at_your_service"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="11dp"
        android:paddingTop="0dp"
        android:text="@string/you_can_leave_a_message_and_we_will_get_back_to_you_as_soon_as_possible_ni_m_here_to_help_with_any_questions_you_have"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="230dp"
        android:hint="Your Name"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="320dp"
        android:hint="Your Phone Number"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="410dp"
        android:hint="Your Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="500dp"
        android:hint="Your Message"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/editTextMessage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#808080"
        android:text="@string/submit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />


</RelativeLayout>