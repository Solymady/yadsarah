<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccommodationUnitsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-28dp"
        android:layout_marginLeft="-28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/branchesTitle"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/header_img"
                android:text="Accommodation Units"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paragraphTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="@string/title_for_units"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:gravity="center"
                android:src="@drawable/units" />

            <TextView
                android:id="@+id/feedbacktitle"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@id/paragraphTextView"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Glad to hear that you are eager to read the feedback left by the guests."
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paragraphTextView22"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@id/feedbacktitle"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="When we arrived, we thought we were coming to another place to sleep until our release on Sunday,\n\nI opened the room, and I see a charming and well-equipped cabin, attention to detail, and everything with a very good taste."
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="409dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/photo2" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>